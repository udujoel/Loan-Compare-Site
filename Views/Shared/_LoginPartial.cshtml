@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)

{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav-link shadow" }))
	{
	@Html.AntiForgeryToken()

	<ul class="nav navbar-nav navbar-right">
		<li>
			@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link shadow"})
		</li>
		<li><a class="nav-link shadow text-info" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
		@if (User.IsInRole("admin"))
		{
			<li>
				@Html.ActionLink("Report", "Index", "Admin", routeValues: null, htmlAttributes: new {title = "Manage", @class = "nav-link shadow"})
			</li>
			<li>
				@Html.ActionLink("Role", "Index", "Roles", routeValues: null, htmlAttributes: new {title = "Roles", @class = "nav-link shadow"})
			</li>
		}
	</ul>
	}
}
else
{
<ul class="navbar-nav">
	

	<li class="nav-item  mr-3 mt-lg-0 mt-3">
		@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink" , @class="nav-link shadow"})

		<span class="sr-only">(current)</span>

	</li>
	<li class="nav-item  mr-3 mt-lg-0 mt-3">
		@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink", @class="nav-link shadow"})

	</li>
</ul>
}
